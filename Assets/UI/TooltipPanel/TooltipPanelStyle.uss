    max-height: 100px;
}

.badge {
    width: 64px;
    height: 64px;
    border-top-left-radius: 999px;
    border-top-right-radius: 999px;
    border-bottom-right-radius: 999px;
    border-bottom-left-radius: 999px;
    border-top-width: 2px;
    border-right-width: 2px;
    border-bottom-width: 2px;
    border-left-width: 2px;
    border-left-color: rgba(165, 108, 34, 0.57);
    border-right-color: rgba(165, 108, 34, 0.57);
    border-top-color: rgba(165, 108, 34, 0.57);
    border-bottom-color: rgba(165, 108, 34, 0.57);
    background-color: rgba(42, 33, 24, 0.68);
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    max-width: 64px;
    max-height: 64px;
    top: 0;
    left: 0;
}

