:root {
}

.tooltip {
    position: absolute;
    max-width: 520px;
    padding-top: 12px;
    padding-right: 12px;
    padding-bottom: 12px;
    padding-left: 12px;
    color: rgb(0, 0, 0);
    -unity-slice-type: tiled;
    background-color: rgba(0, 0, 0, 0);
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
    width: 300px;
    flex-basis: 300px;
    transition-property: opacity;
    opacity: 0;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
}

.tooltip--hidden {
    opacity: 0;
}

.tooltip--visible {
    opacity: 1;
}

